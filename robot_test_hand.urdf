<?xml version="1.0"?>
<robot name="robot">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0" />
      <geometry>
        <box size="0.5 2 0.5" />
      </geometry>
    </visual>
   
    <collision>
      <geometry>
        <box size="0.5 2 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.034" ixy="0.0" ixz="0.0" iyy="0.034" iyz="0.0" izz="0.034" />
    </inertial>
  </link>
  <link name="arm">
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
        <box size="0.25 0.25 1" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.25 0.25 1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>
  <joint name="support_joint" type="continuous">
    <origin xyz="0 0 1.5" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="arm" />
    <axis xyz="1 0 0" />
    <limit lower="-3.14" upper="3.14" effort="0.0" velocity="0.0001"/>
  </joint>
</robot>